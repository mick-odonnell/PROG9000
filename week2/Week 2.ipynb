   "source": [
    "# You can use if statements in for clauses....\n",
    "# What's happening here?\n",
    "\n",
    "my_name = \"Mick O Donnell\"\n",
    "\n",
    "for i,l in enumerate(my_name):\n",
    "    if i%2 == 1: \n",
    "        print(l)"
